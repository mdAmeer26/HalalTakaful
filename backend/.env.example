# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/halaltakaful
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/halaltakaful

# JWT Secrets (Generate random strings for production)
JWT_ACCESS_SECRET=your_super_secret_access_token_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key_change_this_in_production

# JWT Expiration
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# CORS Origins (comma-separated)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
